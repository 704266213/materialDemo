<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.app.demo.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:text="Hello World!" />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="#515151"
                android:onClick="test"
                android:text="测试"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="#515151"
                android:onClick="headViewPager"
                android:text="headViewPager"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="#515151"
                android:onClick="stickyHeadersRecyclerView"
                android:text="sticky-headers-recyclerview"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="#515151"
                android:onClick="material"
                android:text=" Material Design"
                android:textColor="#000000"
                android:textStyle="bold" />



            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="#515151"
                android:onClick="collapsingToolbarLayout"
                android:text="collapsingToolbarLayout"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="#515151"
                android:onClick="collapsingToolbar"
                android:text="collapsingToolbar"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="#515151"
                android:onClick="onMaterialScoller"
                android:text="onMaterialScoller"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="#515151"
                android:onClick="scollerViewPager"
                android:text="scollerViewPager"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="#515151"
                android:onClick="myViewGroup"
                android:text="MyViewGroupActivity"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/email_sign_in_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#515151"
                android:onClick="login"
                android:text="@string/action_sign_in"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="#515151"
                android:onClick="setting"
                android:text="@string/title_activity_setting"
                android:textColor="#000000"
                android:textStyle="bold" />

        </LinearLayout>


    </ScrollView>


</LinearLayout>
